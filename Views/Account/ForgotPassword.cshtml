@model QuanLyChiTieu.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";
}

<div class="login-page-wrapper">
    <div class="login-container">
        <div class="login-aside">
            <img src="~/images/qmk.jpg" alt="Quên mật khẩu" class="welcome-image" />
        </div>

        <div class="login-form-section">
            <div class="text-center mb-4">
                 <a class="login-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-wallet2"></i> Quản Lý Chi Tiêu
                </a>
            </div>
            <h2 class="form-title text-center">Khôi phục Mật khẩu</h2>
            <p class="form-subtitle text-center">Đừng lo lắng! Nhập email của bạn và chúng tôi sẽ hướng dẫn bạn các bước tiếp theo.</p>

            @if (ViewBag.SuccessMessage != null)
            {
                    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
            }

            <form asp-action="ForgotPassword" method="post" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">Địa chỉ Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Nhập email đã đăng ký" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">TIẾP TỤC</button>
                </div>
            </form>
             <div class="text-center mt-4">
                <a asp-controller="Account" asp-action="Login" class="forgot-password-link">Quay lại Đăng nhập</a>
            </div>
        </div>
    </div>
</div>